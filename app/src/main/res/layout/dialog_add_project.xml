<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <!-- Dialog Heading -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:text="New Concrete Mix Design "
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutProjectName"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Project name">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextProjectName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutCharacteristicStrength"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Target Characteristic strength">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextCharacteristicStrength"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="number" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutAtDays"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="At Days">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextAtDays"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="number" />

    </com.google.android.material.textfield.TextInputLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="12dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Concrete type:"
        android:textSize="17sp"
        android:textStyle="normal" />
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/spinner_design_type"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:entries="@array/design_options" />

    </com.google.android.material.textfield.TextInputLayout>


</LinearLayout>
